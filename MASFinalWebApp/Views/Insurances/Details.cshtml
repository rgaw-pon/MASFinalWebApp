@model MASFinalWebApp.Models.Insurance

@{
    ViewData["Title"] = "Details";
}

<h1>Details of @Html.DisplayFor(model => model.Name)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InsuranceAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceRange)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InsuranceRange)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneralTermsAndConditions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneralTermsAndConditions)
        </dd>
        <dt class="col-sm-2">
            Packages List
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                @foreach (var item in Model.InsurancesInPackages)
                {
                    <tr>
                        <td>

                            <a asp-controller="InsurancePackages" asp-action="Details" asp-route-id="@item.InsurancePackage.InsurancePackageID">
                                @Html.DisplayFor(modelItem => item.InsurancePackage.Name)
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            Clients List
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                @foreach (var item in Model.InsuranceAgreements)
                {
                    <tr>
                        <td>
                            @{
                                string clientFullName = item.Client.Name + " " + item.Client.Surname;
                            }

                            <a asp-controller="Clients" asp-action="Details" asp-route-id="@item.Client.PersonID">
                                @Html.DisplayFor(modelItem => clientFullName)
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.InsuranceID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
