@model MASFinalWebApp.Models.Insurance

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Insurance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InsuranceAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceRange)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InsuranceRange)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneralTermsAndConditions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneralTermsAndConditions)
        </dd>
        <dt class="col-sm-2">
            Packages List
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                @foreach (var item in Model.InsurancesInPackages)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InsurancePackage.Name)
                            <a asp-controller="InsurancePackages" asp-action="Details" asp-route-id="@item.InsurancePackage.InsurancePackageID">Details</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.InsuranceID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
