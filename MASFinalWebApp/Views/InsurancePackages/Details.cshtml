@model MASFinalWebApp.Models.InsurancePackage

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>InsurancePackage</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
         <dt class="col-sm-2">
            Insurances List
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                @foreach (var item in Model.InsurancesInPackages)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Insurances.Name)
                            <a asp-controller="Insurances" asp-action="Details" asp-route-id="@item.Insurances.InsuranceID">Details</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.InsurancePackageID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
